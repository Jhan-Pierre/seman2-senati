<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define a custom EditText style -->
    <style name="mainEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/neutral_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Estilo para TextInputEditText -->
    <style name="mainTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/transparent_white</item>
    </style>

    <!-- Estilo para TextInputLayout -->
    <style name="mainTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/transparent_white</item>
    </style>
</resources>